{% extends "./layouts/default.njk" %}

{% block page_title %}
  {{ texts.COOKIE_PAGE.HEADING }} - {{ texts.INTERFACE.GOV }}
{% endblock %}

{% block page_identifier %}Cookies{% endblock %}


{% block content %}

<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-xlarge">{{ texts.COOKIE_PAGE.HEADING }}</h1>

    <p>{{ texts.COOKIE_PAGE.SUMMARY }}</p>

    <p>{{ texts.COOKIE_PAGE.LIST_HEADING }}</p>
