      <li>{{ texts.COOKIE_PAGE.BULLET_ONE }}</li>
      <li>{{ texts.COOKIE_PAGE.BULLET_TWO }}</li>
    </ul>

    <div class="panel panel-border-wide">
      <p>
        {{ texts.COOKIE_PAGE.IDENTIFY }}
      </p>
    </div>

    <p>{{ texts.COOKIE_PAGE.MESSAGE }}</p>

    <p>{{ texts.COOKIE_PAGE.MORE_INFO_START }}
    <a href="{{ texts.COOKIE_PAGE.MORE_INFO_LINK }}" id="moreInfoLink">{{ texts.COOKIE_PAGE.MORE_INFO_END }}</a>
    </p>

    <h3 class="heading-medium">
    {{ texts.COOKIE_PAGE.COOKIE_USAGE }}
    </h3>

    <h4 class="heading-small">
    {{ texts.COOKIE_PAGE.MEASURE_HEADING }}
    </h4>
    <p>
      {{ texts.COOKIE_PAGE.MEASURE_INFO }}
    </p>
    <p>
      {{ texts.COOKIE_PAGE.ANALYTICS }}
    </p>
    <p>
      {{ texts.COOKIE_PAGE.ANALYTICS_REPORT }}
    </p>
    <p>
      {{ texts.COOKIE_PAGE.TRACKING }}
    </p>
    <p>
      {{ texts.COOKIE_PAGE.DATA_CAPTURE }}
    </p>
    <p>
      {{ texts.COOKIE_PAGE.REASON }}
    </p>
    <p>
      {{ texts.COOKIE_PAGE.USED_COOKIES }}
    </p>

    <table>
      <thead>
        <tr>
          <th scope="col">{{ texts.COOKIE_PAGE.NAME_TITLE }}</th>
          <th scope="col">{{ texts.COOKIE_PAGE.PURPOSE_TITLE }}</th>
          <th scope="col">{{ texts.COOKIE_PAGE.EXPIRES_TITLE }}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{ texts.COOKIE_PAGE.NAME_ONE }}</td>
          <td>{{ texts.COOKIE_PAGE.PURPOSE_ONE }}</td>
          <td>{{ texts.COOKIE_PAGE.EXPIRES_ONE }}</td>
        </tr>
        <tr>
          <td>{{ texts.COOKIE_PAGE.NAME_TWO }}</td>
          <td>{{ texts.COOKIE_PAGE.PURPOSE_TWO }}</td>
          <td>{{ texts.COOKIE_PAGE.EXPIRES_TWO }}</td>
        </tr>
      </tbody>
    </table>

    </br>

    <p>{{ texts.COOKIE_PAGE.OPT_OUT_START }}
      <a href="{{ texts.COOKIE_PAGE.OPT_OUT_LINK }}" id="optOutLink">{{ texts.COOKIE_PAGE.OPT_OUT_END }}</a>
    </p>

    <h4 class="heading-small">
    {{ texts.COOKIE_PAGE.SESSIONS }}</p>
    </h4>

    <p>{{ texts.COOKIE_PAGE.SESSION_SUMMARY }}</p>

    <table>
      <thead>
        <tr>
          <th scope="col">{{ texts.COOKIE_PAGE.NAME_TITLE }}</th>
          <th scope="col">{{ texts.COOKIE_PAGE.PURPOSE_TITLE }}</th>
          <th scope="col">{{ texts.COOKIE_PAGE.EXPIRES_TITLE }}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{ texts.COOKIE_PAGE.NAME_THREE }}</td>
          <td>{{ texts.COOKIE_PAGE.PURPOSE_THREE }}</td>
          <td>{{ texts.COOKIE_PAGE.EXPIRES_THREE }}</td>
        </tr>
        <tr>
          <td>{{ texts.COOKIE_PAGE.NAME_FOUR }}</td>
          <td>{{ texts.COOKIE_PAGE.PURPOSE_FOUR }}</td>
          <td>{{ texts.COOKIE_PAGE.EXPIRES_FOUR }}</td>
        </tr>
      </tbody>
    </table>
    </br>
    <h4 class="heading-small">
      {{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_HEADER }}</p>
    </h4>

    <p>
      {{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_SERVICE }}
    </p>
    <p>
      {{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_DETAILS }}
    </p>
    <a href="{{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_LINK }}">
      {{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_LINK }}
    </a>
    <br></br>
    <p>
      {{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_RESULTS }}
    </p>
    <p>
      {{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_DATA }}
    </p>
    <p>
      {{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_COOKIES }}
    </p>
    <a href="{{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_COOKIES_LINK }}">
      {{ texts.COOKIE_PAGE.FEEDBACK_SURVEY_COOKIES_LINK }}
