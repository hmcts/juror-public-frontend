{% from "../govuk-frontend/components/error-summary/macro.njk" import govukErrorSummary %}

 {# {{ errors.count }} Errors (test) #}

{% if errors.count > 0 %}

  {% if errors.message.length > 0 %}
  {% endif %}

  {% set errorItems = [] %}
  {% for key, messages in errors.items %}
    {% if messages[0]|isString %}
      {% set errorItems = (errorItems.push({text: messages[0], href: '#' + key}), errorItems) %}
    {% else %}
      {% set errorItems = (errorItems.push({text: messages[0].summary, href: '#' + key}), errorItems) %}
    {% endif %}
  {% endfor %}

  {{ govukErrorSummary({
    titleText: errors.title,
    errorList: errorItems
  }) }}

{% endif %}

