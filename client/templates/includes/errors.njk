{% if errors.count > 0 %}
<div class="error-summary" aria-labelledby="error-summary-heading" tabindex="-1">

  <ul class="error-summary-list" role="alert" aria-live="polite" aria-atomic="true">
    <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
      {{ errors.title }}
    </h2>
    {% if errors.message.length > 0 %}
    <p>{{ errors.message }}</p>
    {% endif %}
    {% for key, messages in errors.items %}
    <li>
      {% if key in ['contactPhone','thirdPartyReason','dateOfBirth','useJurorPhoneDetails','useJurorEmailDetails','livedConsecutive','mentalHealthSectioned','mentalHealthCapacity','onBail','convicted','cjsEmployed','cjsEmployer','assistanceNeeded'] %}
        <a href="#{{ key }}Group">
      {% else %}
        <a href="#{{ key }}">
      {% endif %}
        {% if messages[0]|isString %}
        {{ messages[0] }}
        {% else %}
        {{ messages[0].summary }}
        {% endif %}
      </a>
    </li>
    {% endfor %}
  </ul>
</div>
{% endif %}
