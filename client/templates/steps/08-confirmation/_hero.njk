{% set HTMLButtonText %}
  <span class="govuk-visually-hidden">{{texts.CONFIRMATION.HERO.OPEN_HTML_HIDDEN}}</span>{{texts.CONFIRMATION.HERO.OPEN_HTML}}
{% endset %}

{{ govukButton({
  html: HTMLButtonText,
  classes: "govuk-button--secondary ga-download-summons-reply-html",
  href: "/steps/08-confirmation/download-html"
}) }}

