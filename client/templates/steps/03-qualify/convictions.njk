{% extends "../../layouts/default.njk" %}

{% block page_title %}
  {% if user.thirdParty == 'Yes' %}
  {{ texts.QUALIFY_PAGE.HEADING_OB }} - {{ texts.INTERFACE.GOV }}
  {% else %}
  {{ texts.QUALIFY_PAGE.HEADING }} - {{ texts.INTERFACE.GOV }}
  {% endif %}
{% endblock %}

{% block page_identifier %}Eligibility Convictions{% endblock %}

{% block content %}

<div class="grid-row">

  <div class="column-two-thirds">

    <h1 class="heading-xlarge">
      {% if user.thirdParty == 'Yes' %}
      {{ texts.QUALIFY_PAGE.HEADING_OB }}
      {% else %}
      {{ texts.QUALIFY_PAGE.HEADING }}
      {% endif %}
    </h1>

    {% include "../../includes/errors.njk" %}

    <form action="{{ url('steps.qualify.convictions.post') }}" method="post">
      <div class="form-group inline {% if errors.items['convicted'] %}error{% endif %}" id="convictedGroup">
          <span class="form-label-bold">
            {% if user.thirdParty == 'Yes' %}
            {{ texts.QUALIFY_PAGE.QUESTION_4_OB }}
            {% else %}
            {{ texts.QUALIFY_PAGE.QUESTION_4 }}
            {% endif %}
          </span>
          <span class="form-hint" id="convictedHint">{{ texts.QUALIFY_PAGE.UNSURE_PROMPT }} <a href="{{ url('steps.qualify.convictions.info') }}">{{ texts.QUALIFY_PAGE.MORE_INFO_LINK }}</a></span>
          {% if errors.items['convicted'] %} <span class="error-message"> {{ texts.QUALIFY_PAGE.MISSING }} </span> {% endif %}
        <label class="block-label selection-button-radio" for="convicted-Yes" data-target="convictedDetailsGroup">
          <input id="convicted-Yes" type="radio" name="convicted" class="store-updated-information" value="Yes" {% if user.qualify.convicted.answer == 'Yes' %}checked="checked"{% endif %}>
          {{ texts.QUALIFY_PAGE.YES }}
        </label>
        <label class="block-label selection-button-radio" for="convicted-No">
          <input id="convicted-No" type="radio" name="convicted" class="store-updated-information" value="No" {% if user.qualify.convicted.answer == 'No' %}checked="checked"{% endif %}>
          {{ texts.QUALIFY_PAGE.NO }}
        </label>

        <div class="panel panel-border-narrow {% if user.qualify.convicted.answer === 'Yes' %}{% else %}js-hidden{% endif %} {% if errors.items['convictedDetails'] %}error{% endif %}" id="convictedDetailsGroup">
          <label class="form-label" for="convictedDetails">{{ texts.QUALIFY_PAGE.DETAILS }}</label>
          <textarea class="form-control" name="convictedDetails" id="convictedDetails" maxlength="1000">{{ user.qualify.convicted.details }}</textarea>
        </div>
      </div>

      {# Submit form #}
      <input type="hidden" name="_csrf" id="_csrf" value="{{ csrftoken }}">
      <input class="button" type="submit" value="{{ texts.INTERFACE.BUTTON_TEXT_CONTINUE }}">
    </form>

  </div>
</div>

{% endblock %}
