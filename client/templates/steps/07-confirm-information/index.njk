{% extends "../../layouts/default-gds.njk" %}

{% from "../../govuk-frontend/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "../../govuk-frontend/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  {% include "../../includes/title-error.njk" %}
  {{ texts.CHECK_ANSWERS_PAGE.HEADING }} - {{ texts.INTERFACE.GOV }}
{% endblock %}

{% block page_identifier %}Check Your Answers{% endblock %}

{% block content %}

  {% include "../../includes/errors-gds.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <h1 class="govuk-heading-xl">
        {{ texts.CHECK_ANSWERS_PAGE.HEADING }}
      </h1>

      <p class="govuk-body">
        {% if user.thirdParty == 'Yes' %}
          {{ texts.CHECK_ANSWERS_PAGE.OB_INFO }}
        {% else %}
          {{ texts.CHECK_ANSWERS_PAGE.JUROR_INFO }}
        {% endif %}
      </p>

    {% if user.ineligibleDeceased !== true %}

      <div class="govuk-body govuk-table__cell" >
        {% if user.thirdParty == 'Yes' %}
          <h3 class="govuk-heading-m">{{ texts.CHECK_ANSWERS_PAGE.DETAILS_HEADER_OB }}</h3>
        {% else %}
          <h3 class="govuk-heading-m">{{ texts.CHECK_ANSWERS_PAGE.DETAILS_HEADER_NORMAL }}</h3>
        {% endif %}
      </div>

      <dl class="govuk-summary-list">

        {# name #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key_jd" id="question-name">
            {{ texts.CHECK_ANSWERS_PAGE.NAME_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value govuk-summary-list__value_jd" id="name">
            {{ user.nameRender }}
          </dd>
          <dd class="govuk-summary-list__actions govuk-summary-list__actions_jd">
            <a class="govuk-link" href="{{ personalDetailsChangeNameLink }}" id="changeName" aria-describedby="question-name">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
              <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.NAME_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# address #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-address">
            {{ texts.CHECK_ANSWERS_PAGE.ADDRESS_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value" id="adress">
            {{ user.addressRender | replace("<br>", ", ") }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ personalDetailsChangeAddressLink }}" id="changeAddress" aria-describedby="question-address">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
              <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.ADDRESS_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# date of birth #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-dob">
            {{ texts.CHECK_ANSWERS_PAGE.DOB_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value" id="dateOfBirth">
            {{ user.dobDay }} / {{ user.dobMonth }} / {{ user.dobYear }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ personalDetailsChangeDateOfBirthLink }}" id="changeDob" aria-describedby="question-dob">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
              <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.DOB_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# primary phone #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-phoneprimary">
            {{ texts.CHECK_ANSWERS_PAGE.PHONE_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value" id="primaryPhone">
            {{ user.primaryPhone }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ contactDetailsChangePhoneLink }}" id="changePhone" aria-describedby="question-phoneprimary">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
              <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.PHONE_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# secondary phone #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-phonesecondary">
            {{ texts.CHECK_ANSWERS_PAGE.ALT_PHONE_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value" id="secondaryPhone">
            {{ user.secondaryPhone }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ contactDetailsChangePhoneLink }}" id="changeSecondaryPhone" aria-describedby="question-phonesecondary">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
              <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.ALT_PHONE_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# email #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-email">
            {{ texts.CHECK_ANSWERS_PAGE.EMAIL_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value" id="emailAddress">
            {{ user.emailAddress }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ contactDetailsChangeEmailLink }}" id="changeEmailAddress" aria-describedby="question-email">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
              <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.EMAIL_LABEL }}</span>
            </a>
          </dd>
        </div>
      </dl>

    {% endif %}

    {% if user.thirdParty == 'Yes' %}
      <br>

      <div class="govuk-body govuk-table__cell" >
        <h3 class="govuk-heading-m">{{ texts.CHECK_ANSWERS_PAGE.OB_HEADING }}</h3>
      </div>

      <dl class="govuk-summary-list">

        {# TP name #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key_jd" id="question-obname">
            {{ texts.CHECK_ANSWERS_PAGE.OB_NAME_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value govuk-summary-list__value_jd" id="thirdPartyName">
            {{ user.thirdPartyDetails.nameRender }}
          </dd>
          <dd class="govuk-summary-list__actions govuk-summary-list__actions_jd">
            <a class="govuk-link" href="{{ url('branches.third.party.details.change.name.get') }}" id="changeThirdPartyName" aria-describedby="question-obname">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}<span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.OB_NAME_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# TP relationship #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-obrelationship">
            {{ texts.CHECK_ANSWERS_PAGE.OB_RELATIONSHIP_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value" id="thirdPartyRelationship">
            {{ user.thirdPartyDetails.relationship }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ url('branches.third.party.details.change.relationship.get') }}" id="changeThirdPartyRelationship" aria-describedby="question-obrelationship">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}<span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.OB_RELATIONSHIP_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# TP primary phone #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-obphoneprimary">
            {{ texts.CHECK_ANSWERS_PAGE.OB_MAIN_PHONE_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value" id="thirdPartyMainPhone">
            {{ user.thirdPartyDetails.mainPhone }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ url('branches.third.party.details.change.contact.get') }}" id="changeThirdPartyMainPhone" aria-describedby="question-obphoneprimary">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}<span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.OB_MAIN_PHONE_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# TP secondary phone #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-obphonesecondary">
            {{ texts.CHECK_ANSWERS_PAGE.OB_OTHER_PHONE_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value" id="thirdPartyOtherPhone">
            {{ user.thirdPartyDetails.otherPhone }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ url('branches.third.party.details.change.contact.get') }}" id="changeThirdPartyOtherPhone" aria-describedby="question-obphonesecondary">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}<span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.OB_OTHER_PHONE_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# TP email #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-obemail">
            {{ texts.CHECK_ANSWERS_PAGE.OB_EMAIL_ADDRESS_LABEL }}
          </dt>
          <dd class="govuk-summary-list__value" id="thirdPartyEmailAddress">
            {{ user.thirdPartyDetails.emailAddress }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ url('branches.third.party.details.change.contact.get') }}" id="changeThirdPartyEmailAddress" aria-describedby="question-obemail">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}<span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.OB_EMAIL_ADDRESS_LABEL }}</span>
            </a>
          </dd>
        </div>

        {# TP Reason #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key" id="question-obreason">
            {{ texts.CHECK_ANSWERS_PAGE.OB_WHY_QUESTION }}
          </dt>
          <dd class="govuk-summary-list__value" id="thirdPartyReason">
           {{ user.thirdPartyDetails.reasonText }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="{{ url('branches.third.party.reason.change.get') }}" id="changeReason" aria-describedby="question-obreason">
              {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}<span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</span>
            </a>
          </dd>
        </div>

      </dl>

    {% endif %}

    <br>
    {% if user.ineligibleAge === false and user.ineligibleDeceased !== true %}

      <div class="govuk-body govuk-table__cell" >
        {% if user.thirdParty == 'Yes' %}
          <h3 class="govuk-heading-m">{{ texts.CHECK_ANSWERS_PAGE.OB_QUALIFY_QUESTION }}</h3>
        {% else %}
          <h3 class="govuk-heading-m">{{ texts.CHECK_ANSWERS_PAGE.JUROR_QUALIFY_QUESTION }}</h3>
        {% endif %}
      </div>

      {# Qualify - Residency Lived Consecutive#}
      <dl class="govuk-summary-list govuk-body">

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key_jd" id="questionLivedConsecutive">
            {% if user.thirdParty == 'Yes' %}
              {{ texts.CHECK_ANSWERS_PAGE.OB_QUALIFY_QUESTION_LIVED_CONSECUTIVE }}
            {% else %}
              {{ texts.CHECK_ANSWERS_PAGE.JUROR_QUALIFY_QUESTION_LIVED_CONSECUTIVE }}
            {% endif %}
          </dt>
          <dd class="govuk-summary-list__value govuk-summary-list__value_jd" id="answerLivedConsecutive">
            {% if user.qualify.livedConsecutive.details.length > 0 and user.qualify.livedConsecutive.answer == texts.QUALIFY_PAGE.NO %}
              {% if user.thirdParty == 'Yes' %}
                <span id="livedConsecutiveAnswer">{{ texts.QUALIFY_PAGE.RESIDENCY_NO_OB }} - {{ user.qualify.livedConsecutive.details }}</span>
              {% else %}
                <span id="livedConsecutiveAnswer">{{ texts.QUALIFY_PAGE.RESIDENCY_NO }} - {{ user.qualify.livedConsecutive.details }}</span>
              {% endif %}
            {% else %}
              {% if user.thirdParty == 'Yes' %}
                <span id="livedConsecutiveAnswer">{{ texts.QUALIFY_PAGE.RESIDENCY_YES_OB }}</span>
              {% else %}
                <span id="livedConsecutiveAnswer">{{ texts.QUALIFY_PAGE.RESIDENCY_YES }}</span>
              {% endif %}
            {% endif %}
          </dd>
          <dd class="govuk-summary-list__actions govuk-summary-list__actions_jd">
            {% if user.thirdParty == 'Yes' %}
              <a class="govuk-link" href="{{ url('steps.qualify.residency.change.tp.get') }}" id="changeLivedConsecutive" aria-describedby="question-livedconsecutive">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% else %}
              <a class="govuk-link" href="{{ url('steps.qualify.residency.change.get') }}" id="changeLivedConsecutive" aria-describedby="question-livedconsecutive">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% endif %}
          </dd>
        </div>
        

        {# Qualify - Mental Health Sectioned #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key_jd" id="questionMentalHealthSectioned">
            {% if user.thirdParty == 'Yes' %}
              {{ texts.CHECK_ANSWERS_PAGE.OB_QUALIFY_QUESTION_MENTAL_HEALTH_SECTIONED }}
            {% else %}
              {{ texts.CHECK_ANSWERS_PAGE.JUROR_QUALIFY_QUESTION_MENTAL_HEALTH_SECTIONED }}
            {% endif %}
          </dt>
          <dd class="govuk-summary-list__value govuk-summary-list__value_jd" id="answerMentalHealthSectioned">
            {% if user.qualify.mentalHealthSectioned.details.length > 0 and user.qualify.mentalHealthSectioned.answer == texts.QUALIFY_PAGE.YES %}
              {% if user.thirdParty == 'Yes' %}
                <span id="mentalHealthSectionedAnswer">{{ texts.QUALIFY_PAGE.MENTAL_HEALTH_YES_OB }} - {{ user.qualify.mentalHealthSectioned.details }}</span>
              {% else %}
                <span id="mentalHealthSectionedAnswer">{{ texts.QUALIFY_PAGE.MENTAL_HEALTH_YES }} - {{ user.qualify.mentalHealthSectioned.details }}</span>
              {% endif %}
            {% else %}
              {% if user.thirdParty == 'Yes' %}
                <span id="mentalHealthSectionedAnswer">{{ texts.QUALIFY_PAGE.MENTAL_HEALTH_NO_OB }}</span>
              {% else %}
                <span id="mentalHealthSectionedAnswer">{{ texts.QUALIFY_PAGE.MENTAL_HEALTH_NO }}</span>
              {% endif %}
            {% endif %}
          </dd>
          <dd class="govuk-summary-list__actions govuk-summary-list__actions_jd">
            {% if user.thirdParty == 'Yes' %}
              <a class="govuk-link" href="{{ url('steps.qualify.mental.health.sectioned.change.tp.get') }}" id="changeMentalHealthSectioned" aria-describedby="question-mentalhealth">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% else %}
              <a class="govuk-link" href="{{ url('steps.qualify.mental.health.sectioned.change.get') }}" id="changeMentalHealthSectioned" aria-describedby="question-mentalhealth">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% endif %}
          </dd>
        </div>


        {# Qualify - Mental Health Capacity #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key_jd" id="questionMentalHealthCapacity">
            {% if user.thirdParty == 'Yes' %}
              {{ texts.CHECK_ANSWERS_PAGE.OB_QUALIFY_QUESTION_MENTAL_HEALTH_CAPACITY }}
            {% else %}
              {{ texts.CHECK_ANSWERS_PAGE.JUROR_QUALIFY_QUESTION_MENTAL_HEALTH_CAPACITY }}
            {% endif %}
          </dt>
          <dd class="govuk-summary-list__value govuk-summary-list__value_jd" id="answerMentalHealthCapacity">
            {% if user.qualify.mentalHealthCapacity.details.length > 0 and user.qualify.mentalHealthCapacity.answer == texts.QUALIFY_PAGE.YES %}
              {% if user.thirdParty == 'Yes' %}
                <span id="mentalHealthCapacityAnswer">{{ texts.QUALIFY_PAGE.MENTAL_HEALTH_CAPACITY_YES_OB }} - {{ user.qualify.mentalHealthCapacity.details }}</span>
              {% else %}
                <span id="mentalHealthCapacityAnswer">{{ texts.QUALIFY_PAGE.MENTAL_HEALTH_CAPACITY_YES }} - {{ user.qualify.mentalHealthCapacity.details }}</span>
              {% endif %}
            {% else %}
              {% if user.thirdParty == 'Yes' %}
                <span id="mentalHealthCapacityAnswer">{{ texts.QUALIFY_PAGE.MENTAL_HEALTH_CAPACITY_NO_OB }}</span>
              {% else %}
                <span id="mentalHealthCapacityAnswer">{{ texts.QUALIFY_PAGE.MENTAL_HEALTH_CAPACITY_NO }}</span>
              {% endif %}
            {% endif %}
          </dd>
          <dd class="govuk-summary-list__actions govuk-summary-list__actions_jd">
            {% if user.thirdParty == 'Yes' %}
              <a class="govuk-link" href="{{ url('steps.qualify.mental.health.capacity.change.tp.get') }}" id="changeMentalHealthCapacity" aria-describedby="question-mentalhealth">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% else %}
              <a class="govuk-link" href="{{ url('steps.qualify.mental.health.capacity.change.get') }}" id="changeMentalHealthCapacity" aria-describedby="question-mentalhealth">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% endif %}
          </dd>
        </div>


        {# Qualify - On Bail #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key_jd" id="questionOnBail">
            {% if user.thirdParty == 'Yes' %}
              {{ texts.CHECK_ANSWERS_PAGE.OB_QUALIFY_QUESTION_BAIL }}
            {% else %}
              {{ texts.CHECK_ANSWERS_PAGE.JUROR_QUALIFY_QUESTION_BAIL }}
            {% endif %}
          </dt>
          <dd class="govuk-summary-list__value govuk-summary-list__value_jd" id="answerOnBail">
            {% if user.qualify.onBail.details.length > 0 and user.qualify.onBail.answer == texts.QUALIFY_PAGE.YES %}
              {% if user.thirdParty == 'Yes' %}
                <span id="onBailAnswer">{{ texts.QUALIFY_PAGE.BAIL_YES_OB }} - {{ user.qualify.onBail.details }}</span>
              {% else %}
                <span id="onBailAnswer">{{ texts.QUALIFY_PAGE.BAIL_YES }} - {{ user.qualify.onBail.details }}</span>
              {% endif %}
            {% else %}
              {% if user.thirdParty == 'Yes' %}
                <span id="onBailAnswer">{{ texts.QUALIFY_PAGE.BAIL_NO_OB }}</span>
              {% else %}
                <span id="onBailAnswer">{{ texts.QUALIFY_PAGE.BAIL_NO }}</span>
              {% endif %}
            {% endif %}
          </dd>
          <dd class="govuk-summary-list__actions govuk-summary-list__actions_jd">
            {% if user.thirdParty == 'Yes' %}
              <a class="govuk-link" href="{{ url('steps.qualify.bail.change.tp.get') }}" id="changeOnBail" aria-describedby="question-bail">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% else %}
              <a class="govuk-link" href="{{ url('steps.qualify.bail.change.get') }}" id="changeOnBail" aria-describedby="question-bail">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% endif %}
          </dd>
        </div>


        {# Qualify - Convictions #}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key_jd" id="questionConvictions">
            {% if user.thirdParty == 'Yes' %}
              {{ texts.CHECK_ANSWERS_PAGE.OB_QUALIFY_QUESTION_CONVICTED }}
            {% else %}
              {{ texts.CHECK_ANSWERS_PAGE.JUROR_QUALIFY_QUESTION_CONVICTED }}
            {% endif %}
          </dt>
          <dd class="govuk-summary-list__value govuk-summary-list__value_jd" id="answerConvictions">
            {% if user.qualify.convicted.details.length > 0 and user.qualify.convicted.answer == texts.QUALIFY_PAGE.YES %}
              {% if user.thirdParty == 'Yes' %}
                <span id="convictionAnswer">{{ texts.QUALIFY_PAGE.CONVICTIONS_YES_OB}} - {{ user.qualify.convicted.details }}</span>
              {% else %}
                <span id="convictionAnswer">{{ texts.QUALIFY_PAGE.CONVICTIONS_YES}} - {{ user.qualify.convicted.details }}</span>
              {% endif %}
            {% else %}
              {% if user.thirdParty == 'Yes' %}
                <span id="convictionAnswer">{{ texts.QUALIFY_PAGE.CONVICTIONS_NO_OB }}</span>
              {% else %}
                <span id="convictionAnswer">{{ texts.QUALIFY_PAGE.CONVICTIONS_NO }}</span>
              {% endif %}
            {% endif %}
          </dd>
          <dd class="govuk-summary-list__actions govuk-summary-list__actions_jd">
            {% if user.thirdParty == 'Yes' %}
              <a class="govuk-link" href="{{ url('steps.qualify.convictions.change.tp.get') }}" id="changeConvictions" aria-describedby="question-conviction">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% else %}
              <a class="govuk-link" href="{{ url('steps.qualify.convictions.change.get') }}" id="changeConvictions" aria-describedby="question-conviction">
                {{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}
                <span class="govuk-visually-hidden"> {{ texts.CHECK_ANSWERS_PAGE.CHANGE_HIDDEN }}</span>
              </a>
            {% endif %}
          </dd>
        </div>

      </dl>

      <br>

      <div class="govuk-body govuk-table__cell" >
        {% if user.thirdParty == 'Yes' %}
          <h3 class="govuk-heading-m">{{ texts.CHECK_ANSWERS_PAGE.OB_CONFIRM_DATE_HEADER }}</h3>
        {% else %}
          <h3 class="govuk-heading-m">{{ texts.CHECK_ANSWERS_PAGE.JUROR_CONFIRM_DATE_HEADER }}</h3>
        {% endif %}
      </div>

      {# Date of Jury Service #}
      <dl class="govuk-summary-list govuk-body">

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key_jd" id="questionConfirmDate">
            {% if user.thirdParty == 'Yes' %}
              {{ texts.CHECK_ANSWERS_PAGE.OB_CONFIRM_DATE_PROMPT }}
            {% else %}
              {{ texts.CHECK_ANSWERS_PAGE.JUROR_CONFIRM_DATE_PROMPT }}
            {% endif %}
          </dt>
          <dd class="govuk-summary-list__value govuk-summary-list__value_jd" id="answerConfirmDate">
             {% if user.confirmedDate == 'Change' %}
                {% if user.thirdParty == 'Yes' %}
                  {{ texts.CHECK_ANSWERS_PAGE.OB_LATER_DATE_REQUEST }}
                {% else %}
                  {{ texts.CHECK_ANSWERS_PAGE.JUROR_LATER_DATE_REQUEST }}
                {% endif %}
              {% elseif user.confirmedDate == 'Yes' %}
                {% if user.thirdParty == 'Yes' %}
                  {{ texts.CHECK_ANSWERS_PAGE.OB_CONFIRM_DATE }}
                {% else %}
                  {{ texts.CHECK_ANSWERS_PAGE.JUROR_CONFIRM_DATE }}
                {% endif %}
              {% else %}
                {% if user.thirdParty == 'Yes' %}
                  {{ texts.CHECK_ANSWERS_PAGE.OB_EXCUSAL_REQUEST }}
                {% else %}
                  {{ texts.CHECK_ANSWERS_PAGE.JUROR_EXCUSAL_REQUEST }}
                {% endif %}
              {% endif %}
