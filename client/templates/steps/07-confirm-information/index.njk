{% extends "../../layouts/default.njk" %}

{% block page_title %}
  {% include "../../includes/title-error.njk" %}
  {{ texts.CHECK_ANSWERS_PAGE.HEADING }} - {{ texts.INTERFACE.GOV }}
{% endblock %}

{% block page_identifier %}Check Your Answers{% endblock %}

{% block content %}

<div class="grid-row">

  <div class="column-two-thirds">

    <h1 class="heading-xlarge">{{ texts.CHECK_ANSWERS_PAGE.HEADING }}</h1>

    {% include "../../includes/errors.njk" %}

    <p>
      {% if user.thirdParty == 'Yes' %}
      {{ texts.CHECK_ANSWERS_PAGE.OB_INFO }}
      {% else %}
      {{ texts.CHECK_ANSWERS_PAGE.JUROR_INFO }}
      {% endif %}
    </p>

    {% if user.ineligibleDeceased !== true %}
    <table caption="juror details" class="check-your-answers">
      <thead>
        <tr>
          <th colspan="3">
            {% if user.thirdParty == 'Yes' %}
            {{ texts.CHECK_ANSWERS_PAGE.DETAILS_HEADER_OB }}
            {% else %}
            {{ texts.CHECK_ANSWERS_PAGE.DETAILS_HEADER_NORMAL }}
            {% endif %}
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th class="question" id="question-name">{{ texts.CHECK_ANSWERS_PAGE.NAME_LABEL }}</th>
          <td id="name">{{ user.nameRender }}</td>
          <td class="change-answer"><a href="{{ personalDetailsChangeNameLink }}" id="changeName" aria-describedby="question-name">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>
        <tr>
          <th class="question" id="question-address">{{ texts.CHECK_ANSWERS_PAGE.ADDRESS_LABEL }}</th>
          <td id="address">{{ user.addressRender | replace("<br>", ", ") }}</td>
          <td class="change-answer"><a href="{{ personalDetailsChangeAddressLink }}" aria-describedby="question-address">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>
        <tr>
          <th class="question" id="question-dob">{{ texts.CHECK_ANSWERS_PAGE.DOB_LABEL }}</th>
          <td id="dateOfBirth">{{ user.dobDay }} / {{ user.dobMonth }} / {{ user.dobYear }}</td>
          <td class="change-answer"><a href="{{ personalDetailsChangeDateOfBirthLink }}" aria-describedby="question-dob">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>
        <tr>
          <th class="question" id="question-phoneprimary">{{ texts.CHECK_ANSWERS_PAGE.PHONE_LABEL }}</th>
          <td id="primaryPhone">{{ user.primaryPhone }}</td>
          <td class="change-answer"><a href="{{ contactDetailsChangePhoneLink }}" id="changePhone" aria-describedby="question-phoneprimary">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>
        <tr>
          <th class="question" id="question-phonesecondary">{{ texts.CHECK_ANSWERS_PAGE.ALT_PHONE_LABEL }}</th>
          <td id="secondaryPhone">{{ user.secondaryPhone }}</td>
          <td class="change-answer"><a href="{{ contactDetailsChangePhoneLink }}" id="changeSecondaryPhone" aria-describedby="question-phonesecondary">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>
        <tr>
          <th class="question" id="question-email">{{ texts.CHECK_ANSWERS_PAGE.EMAIL_LABEL }}</th>
          <td id="emailAddress">{{ user.emailAddress }}</td>
          <td class="change-answer"><a href="{{ contactDetailsChangeEmailLink }}" id="changeEmailAddress" aria-describedby="question-email">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>
      </tbody>
    </table>
    {% endif %}

    {% if user.thirdParty == 'Yes' %}
    <br>
    <table caption="juror details" class="check-your-answers">
      <thead>
        <tr>
          <th colspan="3">{{ texts.CHECK_ANSWERS_PAGE.OB_HEADING }}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th class="question" id="question-obname">{{ texts.CHECK_ANSWERS_PAGE.OB_NAME_LABEL }}</th>
          <td id="thirdPartyName">{{ user.thirdPartyDetails.nameRender }}</td>
          <td class="change-answer"><a href="{{ url('branches.third.party.details.change.name.get') }}" id="changeThirdPartyName" aria-describedby="question-obname">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>

        <tr>
          <th class="question" id="question-obrelationship">{{ texts.CHECK_ANSWERS_PAGE.OB_RELATIONSHIP_LABEL }}</th>
          <td id="thirdPartyRelationship">{{ user.thirdPartyDetails.relationship }}</td>
          <td class="change-answer"><a href="{{ url('branches.third.party.details.change.relationship.get') }}" id="changeThirdPartyRelationship" aria-describedby="question-obrelationship">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>

        <tr>
          <th class="question" id="question-obphoneprimary">{{ texts.CHECK_ANSWERS_PAGE.OB_MAIN_PHONE_LABEL }}</th>
          <td id="thirdPartyMainPhone">{{ user.thirdPartyDetails.mainPhone }}</td>
          <td class="change-answer"><a href="{{ url('branches.third.party.details.change.contact.get') }}" id="changeThirdPartyMainPhone" aria-describedby="question-obphoneprimary">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>

        <tr>
          <th class="question" id="question-obphonesecondary">{{ texts.CHECK_ANSWERS_PAGE.OB_OTHER_PHONE_LABEL }}</th>
          <td id="thirdPartyOtherPhone">{{ user.thirdPartyDetails.otherPhone }}</td>
          <td class="change-answer"><a href="{{ url('branches.third.party.details.change.contact.get') }}" id="changeThirdPartyOtherPhone" aria-describedby="question-obphonesecondary">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>

        <tr>
          <th class="question" id="question-obemail">{{ texts.CHECK_ANSWERS_PAGE.OB_EMAIL_ADDRESS_LABEL }}</th>
          <td id="thirdPartyEmailAddress">{{ user.thirdPartyDetails.emailAddress }}</td>
          <td class="change-answer"><a href="{{ url('branches.third.party.details.change.contact.get') }}" id="changeThirdPartyEmailAddress" aria-describedby="question-obemail">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>

        <tr>
          <td colspan="2">
            <p class="question question--full" id="question-obreason">{{ texts.CHECK_ANSWERS_PAGE.OB_WHY_QUESTION }}</p>
            <p id="thirdPartyReason">{{ user.thirdPartyDetails.reasonText }}</p>
          </td>
          <td class="change-answer"><a href="{{ url('branches.third.party.reason.change.get') }}" id="changeReason" aria-describedby="question-obreason">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
        </tr>
      </tbody>
    </table>

    {% endif %}

    <br><br>
    {% if user.ineligibleAge === false and user.ineligibleDeceased !== true %}
      <table class="check-your-answers" id="qualifyAnswersTable">
        <thead>
          <tr>
            <th colspan="2">
              {% if user.thirdParty == 'Yes' %}
              {{ texts.CHECK_ANSWERS_PAGE.OB_QUALIFY_QUESTION }}
              {% else %}
              {{ texts.CHECK_ANSWERS_PAGE.JUROR_QUALIFY_QUESTION }}
              {% endif %}
