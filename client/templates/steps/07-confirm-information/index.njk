                    <pre>{{ texts.QUALIFY_PAGE.RESIDENCY_NO_OB }} - {{ user.qualify.livedConsecutive.details }}</pre>
                  {% else %}
                    <pre>{{ texts.QUALIFY_PAGE.RESIDENCY_NO }} - {{ user.qualify.livedConsecutive.details }}</pre>
                  {% endif %}
                {% else %}
                  {% if user.thirdParty == 'Yes' %}
                    {{ texts.QUALIFY_PAGE.RESIDENCY_YES_OB }}
                  {% else %}
                    {{ texts.QUALIFY_PAGE.RESIDENCY_YES }}
                  {% endif %}
                {% endif %}
              </p>
            </td>
            {% if user.thirdParty == 'Yes' %}
              <td class="change-answer"><a href="{{ url('steps.qualify.residency.change.tp.get') }}" id="changeQualify" aria-describedby="question-livedconsecutive">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
            {% else %}
              <td class="change-answer"><a href="{{ url('steps.qualify.residency.change.get') }}" id="changeQualify" aria-describedby="question-livedconsecutive">{{ texts.CHECK_ANSWERS_PAGE.CHANGE_LINK }}</a></td>
            {% endif %}

          </tr>
          <tr>
            <td>
              <p class="question question--full" id="question-mentalhealth-sectioned">
                {% if user.thirdParty == 'Yes' %}
