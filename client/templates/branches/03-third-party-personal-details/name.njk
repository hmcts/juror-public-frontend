{% extends "../../layouts/default-gds.njk" %}

{% from "../../govuk-frontend/components/details/macro.njk" import govukDetails %}
{% from "../../govuk-frontend/components/input/macro.njk" import govukInput %}
{% from "../../govuk-frontend/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  {% include "../../includes/title-error.njk" %}
  {{ texts.ON_BEHALF.THIRD_PARTY_PERSONAL_DETAILS.HEADER }} - {{ texts.INTERFACE.GOV }}
{% endblock %}

{% block page_identifier %}3rd Party Personal Details Name{% endblock %}

{% block beforeContent %}
  {{ super() }}
  {% include "../../includes/back-link-gds.njk" %}
{% endblock %}

{% block content %}

  {% include "../../includes/errors-gds.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form action="{{ url('branches.third.party.personal.details.name.post') }}" method="post" {% if not IS_PRODUCTION %}novalidate{% endif %}>

        {# Set Title error #}
        {% if errors.items['title'] %}
          {% set titleError = {"text": errors.items['title'][0].details} %}
        {% else %}
          {% set titleError = undefined %}
        {% endif %}

        {# Set First Name error #}
        {% if errors.items['firstName'] %}
          {% set firstNameError = {"text": errors.items['firstName'][0].details} %}
        {% else %}
          {% set firstNameError = undefined %}
        {% endif %}

        {# Set Last Name error #}
        {% if errors.items['lastName'] %}
          {% set lastNameError = {"text": errors.items['lastName'][0].details} %}
        {% else %}
          {% set lastNameError = undefined %}
        {% endif %}

        <div class="govuk-form-group {% if errors.nameError %}govuk-form-group--error{% endif %}">

          {# Name #}
          <fieldset class="inline-edit govuk-fieldset" id="nameGroup">

            <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
              <h1 class="govuk-fieldset__heading">
                <span class="govuk-caption-xl">
                  {{ texts.ON_BEHALF.THIRD_PARTY_PERSONAL_DETAILS.CAPTION }}
                </span>
                {{ texts.ON_BEHALF.THIRD_PARTY_PERSONAL_DETAILS.NAME_HEADER }}
              </h1>
            </legend>

            <strong class="govuk-body govuk-!-font-weight-bold">
              {{ texts.ON_BEHALF.THIRD_PARTY_PERSONAL_DETAILS.FORM_NAME_LABEL }}
            </strong>

            <div class="govuk-grid-row inline-section primary {% if errors.nameError %}closed{% endif %}">
              <div class="govuk-grid-column-one-half govuk-body" id="name">{{ user.nameRender }}</div>
              <div class="govuk-grid-column-one-half govuk-body">
                <a href="#nameGroup" class="govuk-link inline-edit-toggle" id="changeName">{{ texts.INTERFACE.FORM_CHANGE_LABEL }}</a>
              </div>
            </div>

            <div class="inline-section secondary {% if errors.nameError %}open{% endif %}">

              {# Title #}
              {{ govukInput({
                label: {
                  text: texts.ON_BEHALF.THIRD_PARTY_PERSONAL_DETAILS.FORM_TITLE_LABEL
                },
                id: "title",
                name: "title",
                errorMessage: titleError,
                attributes: {
                  maxlength: "10"
                },
                autocomplete: "off",
                value: user.title
              }) }}

              {# First Name #}
              {{ govukInput({
                label: {
                  text: texts.ON_BEHALF.THIRD_PARTY_PERSONAL_DETAILS.FORM_FIRST_NAME_LABEL
                },
                id: "firstName",
                name: "firstName",
                errorMessage: firstNameError,
                attributes: {
                  maxlength: "20"
                },
                autocomplete: "off",
                value: user.firstName
              }) }}
              
              {# Last Name #}
              {{ govukInput({
                label: {
                  text: texts.ON_BEHALF.THIRD_PARTY_PERSONAL_DETAILS.FORM_LAST_NAME_LABEL
                },
                id: "lastName",
                name: "lastName",
                errorMessage: lastNameError,
                attributes: {
                  maxlength: "20"
                },
                autocomplete: "off",
                value: user.lastName
              }) }}

            </div>

          </fieldset>

        </div>

        {# Info about change of name #}
        <details class="govuk-details">
          <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text" {% if trackingCode %}onclick="trackVirtualPageViews('What happens if I change my name?')"{% endif %}>
              {{ texts.ON_BEHALF.THIRD_PARTY_PERSONAL_DETAILS.HELPER_CHANGE_NAME_TITLE }}
            </span>
          </summary>
          <div class="govuk-details__text">
            {{ texts.ON_BEHALF.THIRD_PARTY_PERSONAL_DETAILS.HELPER_CHANGE_NAME_PARAGRAPH_1 }}
          </div>
        </details>

        {# Submit form #}
        {{ govukButton({
          text: texts.INTERFACE.BUTTON_TEXT_CONTINUE
        }) }}

        <input type="hidden" name="_csrf" value="{{ csrftoken }}">

      </form>
      
    </div>
  </div>

{% endblock %}
