{% extends "../../layouts/default.njk" %}

{% block page_title %}
  {{ texts.ON_BEHALF.THIRD_PARTY_ELIGIBILITY.HEADER }} - {{ texts.INTERFACE.GOV }}
{% endblock %}

{% block page_identifier %}3rd Party Eligibility{% endblock %}

{% block content %}

<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-xlarge">{{ texts.ON_BEHALF.THIRD_PARTY_ELIGIBILITY.HEADER }}</h1>
    <p>{{ texts.ON_BEHALF.THIRD_PARTY_ELIGIBILITY.PARAGRAPH_1 }}</p>
    <p>{{ texts.ON_BEHALF.THIRD_PARTY_ELIGIBILITY.PARAGRAPH_2 }}</p>
    <br>
    <form action="{{ url('branches.third.party.eligibility.post') }}" method="post">
      <input type="hidden" name="_csrf" value="{{ csrftoken }}">
      <input class="button" type="submit" value="{{ texts.INTERFACE.BUTTON_TEXT_CONTINUE }}">
    </form>
  </div>
</div>
{% endblock %}
