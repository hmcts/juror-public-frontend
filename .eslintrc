{
  'env': {
    // List of environments from which to allow globals
    // E.g. 'browser' allows 'alert', 'document'
    // 'jquery' allows '$'
    // See http://eslint.org/docs/rules/no-undef#environments for more info
    'browser': true
  },
  'globals': {
    'module': true,
    'require': true
  },
  'rules': {
    'strict': [2, 'safe'],

    // Possible errors
    'valid-jsdoc': [2, {'requireReturn': false}],

    // Best practices
    'block-scoped-var': 2,
    'dot-location': [2, 'property'],
    'eqeqeq': [2, 'smart'],
    'guard-for-in': 2,
    'no-else-return': 2,
    'no-extra-bind': 2,
    'no-fallthrough': 2,
    'no-floating-decimal': 2,
    'no-native-reassign': 2,
    'no-param-reassign': 2,
    'no-redeclare': 2,
    'no-return-assign': 2,
    'no-script-url': 2,
    'no-self-compare': 2,
    'no-sequences': 2,
    'no-with': 2,
    'vars-on-top': 2,

    // Variables
    'no-shadow-restricted-names': 2,
    'no-shadow': 2,
    'no-undef-init': 2,
    'no-undefined': 2,
    'no-unused-vars': 1,
    'no-use-before-define': [2, {"functions": false}],

    // Stylistic issues
    'brace-style': 2,
    'camelcase': 2,
    'comma-spacing': [2, {'before': false, 'after': true}],
    'consistent-this': [2, 'self'],
    'eol-last': 2,
    'indent': [2, 2],
    'keyword-spacing': [
      2,
      {
        'before': true,
        'after': true
      }
    ],
    'newline-after-var': [2, 'always'],
    'no-array-constructor': 2,
    'no-lonely-if': 2,
    'no-mixed-spaces-and-tabs': 2,
    'no-spaced-func': 2,
    'no-trailing-spaces': 2,
    'one-var': [2, 'always'],
    'quotes': [2, 'single'],
    'semi-spacing': 2,
    'space-before-function-paren': [2, 'never'],
    'space-in-parens': [2, 'never'],

    // Legacy
    'no-bitwise': 2,
    'max-len': [2, 120, 4]
  }
}
